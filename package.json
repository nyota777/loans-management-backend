{
  "name": "loans-management-backend",
  "version": "1.0.0",
  "description": "Admin-only loans management API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npx prisma generate && tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:generate": "npx prisma generate",
